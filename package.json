{
  "name": "shell-debugger",
  "displayName": "Shell Debugger",
  "description": "Allow shell commands in launch.json",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onDebug"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "debuggers": [
      {
        "type": "shell",
        "label": "Shell Command",
        "program": "./out/debug.js",
        "configurationAttributes": {
          "launch": {
            "required": [
              "command"
            ],
            "properties": {
              "command": {
                "type": "string",
                "description": "Command name",
                "default": "${1:echo}"
              },
              "args": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Command arguments",
                "default": []
              },
              "cwd": {
                "type": "string",
                "description": "Working directory",
                "default": "${workspaceFolder}"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "shell",
            "request": "launch",
            "name": "Hello world",
            "command": "echo",
            "args": [
              "Hello",
              "World!"
            ]
          }
        ],
        "configurationSnippets": [
          {
            "label": "Shell Debug: execute command",
            "description": "Execute an arbitrary command with optional arguments",
            "body": {
              "type": "shell",
              "request": "launch",
              "name": "Launch",
              "command": "${1:echo}",
              "args": [
                "${2:Hello World}"
              ]
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.58.0"
  }
}
